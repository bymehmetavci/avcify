package com.avcify.ws.file;

import java.util.Collections;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

@RestController
public class FileController {
	
	@Autowired
	FileService fileService;
	
	@PostMapping("/api/1.0/announce-attachments")
	Map<String, String> saveAnnounceAttachment(MultipartFile file) {
		String fileName = fileService.saveAnnounceAttachment(file);
		Map<String, String> responseBody = Collections.singletonMap("file", fileName);
		return responseBody;
	}
}
